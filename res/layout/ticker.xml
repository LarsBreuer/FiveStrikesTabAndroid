			  android:id="@+id/frag_ticker_stat"
			  android:layout_weight="1"
			  android:layout_width="0px"
			  android:layout_height="match_parent" />
	
	<fragment android:name="de.fivestrikes.tab.FragTickerAction"  
			  android:id="@+id/frag_ticker_action"
			  android:layout_weight="1"
			  android:layout_width="0px"
			  android:layout_height="match_parent" />
	
	<fragment android:name="de.fivestrikes.tab.FragEmpty"  
			  android:id="@+id/frag_ticker_player"
			  android:layout_weight="1"
